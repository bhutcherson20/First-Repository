import time

print("Press ENTER to start the stopwatch")
print("and, press CTRL+C to stop the stopwatch")

    # infinite loop


while True:
    try:
        while True:
            input() #For ENTER
            start_time = time.time()
            print("Start...")
        
    except: KeyboardInterrupt
    print("Stopwatch stopped...")
    end_time = time.time()
    print("Congratulations, you finished in:", round(end_time - start_time, 2),"seconds")
